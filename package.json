{
  "name": "@domoinc/ryuu-proxy",
  "version": "4.1.0",
  "description": "a middleware that provides a proxy for local domo app development",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "lint": "tslint src/**/*.ts --project ./tsconfig.json",
    "test": "mocha --opts mocha.opts && rm -rf test",
    "tdd": "mocha --opts mocha.opts --watch",
    "prebuild": "npm run lint",
    "build": "rm -rf ./dist && tsc",
    "start": "npm run build -- -w",
    "prepublishOnly": "npm run test && npm run build:all",
    "clean": "rm -rf node_modules && npm install",
    "build:schematics": "tsc -p tsconfig.schematics.json",
    "copy:schemas": "rsync -Rr schematics/*/schema.json ./dist/",
    "copy:files": "rsync -Rr schematics/*/files/** ./dist/",
    "copy:collection": "cp schematics/collection.json ./dist/schematics/collection.json",
    "postbuild:schematics": "npm run copy:schemas && npm run copy:files && npm run copy:collection",
    "build:all": "npm run build && npm run build:schematics"
  },
  "schematics": "./dist/schematics/collection.json",
  "ng-add": {
    "save": "devDependencies"
  },
  "author": "AppTeam6 <Squad.AppTeam6@domo.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/DomoApps/ryuu-proxy.git"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "keywords": [
    "domo",
    "domo apps"
  ],
  "devDependencies": {
    "@angular-devkit/core": "^8.3.23",
    "@angular-devkit/schematics": "^8.3.23",
    "@types/busboy": "^0.2.3",
    "@types/chai": "^4.0.6",
    "@types/express": "^4.0.36",
    "@types/keytar": "^4.4.2",
    "@types/mocha": "^2.2.39",
    "@types/node": "^13.5.1",
    "@types/request": "^2.47.1",
    "@types/sinon": "^4.0.0",
    "chai": "^4.1.2",
    "cross-env": "^5.0.1",
    "json-loader": "^0.5.7",
    "mocha": "^4.0.1",
    "mock-req": "^0.2.0",
    "sinon": "^4.1.2",
    "ts-node": "^3.1.0",
    "tslint": "^5.2.0",
    "tslint-config-airbnb": "^5.2.1",
    "tslint-loader": "^3.5.3",
    "tsutils": "^2.13.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "busboy": "^0.3.1",
    "core-js": "^2.5.3",
    "fs-extra": "^4.0.2",
    "glob": "^7.1.2",
    "keytar": "^4.13.0",
    "request": "^2.81.0",
    "ryuu-client": "^3.0.0"
  },
  "peerDependencies": {
    "ryuu": "^3.0.1"
  }
}
